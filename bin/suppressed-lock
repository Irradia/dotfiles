#! /bin/bash

MYCOMMAND='xscreensaver-command -lock'
# $MYCOMMAND='sflock'

$MYCOMMAND

pgrep "$MYCOMMAND" > /dev/null

while [ $? -eq 0 ]
do
	sleep 1s
	pgrep sflock > /dev/null

	if [ $? -eq 0 ]; then
		notify-send DUNST_COMMAND_PAUSE
		# echo test
	else
		notify-send DUNST_COMMAND_RESUME
		exit
		# echo tset
	fi
done &
